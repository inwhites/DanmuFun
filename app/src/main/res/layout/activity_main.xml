<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#df000000"
    tools:context=".MainActivity"
    android:id="@+id/parent_group"
    >


    <SeekBar
        android:id="@+id/alpha_progress"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/size_progress"
        android:background="#dfffffff"
        android:max="100"
        android:progress="50"
        android:layout_marginLeft="150dp"/>


    <SeekBar
        android:id="@+id/size_progress"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#dfffffff"
        android:max="10"
        android:progress="4"
        android:layout_marginLeft="150dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alpha_progress"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/alpha_progress"
        android:text="弹幕透明度"
        android:textColor="#dfffffff"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/size_progress"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/size_progress"
        android:text="弹幕大小"
        android:textColor="#dfffffff"
        android:textSize="18sp" />
</RelativeLayout>